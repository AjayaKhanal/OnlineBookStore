@page
@model OnlineBookStore.Pages.Author.AuthorModel

<link rel="stylesheet" type="text/css" href="~/css/Author/author.css" />
<script src="~/js/modal.js"></script>

@{
	ViewData["ModalTitle"] = "Add Author";
}

<div class="author-container">
	<div class="title">
		<h2>Author</h2>
		
		<div class="add-author">
			<button type="submit" asp-page-handler="Create" class="btn-outline-primary open-modal">Add Author</button>

		</div>
	</div>

	<div class="mid">
		<div></div>
		<input type="text" id="searchInput" placeholder="Search by name..." class="form-control mb-2" />
	</div>

	<div class="author-table">
		<table class="table">
			<thead>
				<tr>
					<th>Author Name</th>
					<th>Actions</th>
				</tr>
			</thead>

			<tbody>
				@if (Model.Authors != null && Model.Authors.Any())
				{
					@foreach (var author in Model.Authors)
					{
						<tr>
							<td>@author.AuthorName</td>
							<td>
								<button type="button" class="btn btn-secondary">Edit</button>
								<button type="button" class="btn btn-danger">Delete</button>
							</td>
						</tr>
					}
				}
				else{
				<tr>
					<td>Ajaya</td>
					<td>
						<button type="button" class="btn btn-secondary">Edit</button>
						<button type="button" class="btn btn-danger">Delete</button>
					</td>
				</tr>
				<tr class="empty">
					<td colspan="2">No Authors found</td>
				</tr>
				}
			</tbody>
		</table>
	</div>
</div>

<div class="alert">
	@await Html.PartialAsync("../Shared/_AlertMessage.cshtml")
</div>

<!--Modal-->
<div id="modal" class="modal" draggable="true" role="dialog" aria-modal="true" aria-labelledby="modalTitle">
	<div class="modal-content">
		<!-- Include Header-->
		@await Html.PartialAsync("../Shared/_ModalHeader.cshtml")

		<!-- Modal Body (Input Fields) -->
		<div class="modal-body">
			<form method="post" class="new-author-form">
				<div class="input-group">
					<label for="authorName">Author Name</label>
					<input type="text" asp-for="Author.AuthorName" id="authorName" class="input-field" placeholder="Enter author name" required />
				</div>
				<div class="additional">
					<button type="button" id="additional-author" class="btn-outline-primary">Add Author</button>
				</div>
			</form>
			
		</div>

		<!-- Include Footer -->
		@await Html.PartialAsync("../Shared/_ModalFooter.cshtml")
	</div>
</div>

<script>
	document.getElementById("searchInput").addEventListener("keyup", function () {
		const filter = this.value.toLowerCase();
		document.querySelectorAll(".author-table tbody tr").forEach(row => {
			const name = row.querySelector("td").textContent.toLowerCase();
			row.style.display = name.includes(filter) ? "" : "none";
		});
	});
</script>