<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - OnlineBookStore</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/OnlineBookStore.styles.css" asp-append-version="true" />
	<script src="https://ajax.microsoft.com/ajax/jquery/jquery-1.10.2.js" type="text/javascript"></script>

	<style>
		.alert-div {
			position: fixed;
			bottom: 5px;
			right: 5px;
		}
	</style>
</head>
<body>
	<header>
		@await Html.PartialAsync("./_Navbar.cshtml")
	</header>

	<div class="alert-div">
		@await Html.PartialAsync("./_AlertMessage.cshtml")
	</div>
	<div class="container">

		<main role="main" class="pb-3">
			@RenderBody()
		</main>

	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	@await RenderSectionAsync("Scripts", required: false)

	<script>
		$(document).ready(function () {
			setTimeout(function () {
				$(".alert").fadeOut("slow");
			}, 3000); // 3 seconds
		});
	</script>
</body>
</html>
